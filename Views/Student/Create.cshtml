@model ContosoUniversity.Models.Student;

@{
    ViewData["Title"] = "New Student";
}

<h1>New Student</h1>

@using (Html.BeginForm("Create", "Student"))
{
    <div class="form-group">
        <label>@Html.NameFor(m => m.FirstName)</label>
        @Html.EditorFor(m => m.FirstName)
        <span class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</span>
    </div>
    <div class="form-group">
        <label>@Html.NameFor(m => m.LastName)</label>
        @Html.EditorFor(m => m.LastName)
        <span class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</span>
    </div>
    <div class="form-group">
        <label>@Html.NameFor(m => m.EnrollmentDate)</label>
        @Html.EditorFor(m => m.EnrollmentDate)
        <span class="text-danger">@Html.ValidationMessageFor(m => m.EnrollmentDate)</span>
    </div>
    <div class="btn-block">
        <input type="submit" value="Save" formmethod="post" />
    </div>
}