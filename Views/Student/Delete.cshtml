@model ContosoUniversity.Models.Student;

@{
    ViewData["Title"] = "Delete student";
}

<h1>Do You Want to delete this student?</h1>


@using (Html.BeginForm("Delete"))
{
    @Html.HiddenFor(m => m.ID)
    <div class="form-group">
        <b>@Html.DisplayNameFor(m => m.FirstName)</b>
        @Html.DisplayFor(m => m.FirstName)
        <span class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</span>
    </div>
    <div class="form-group">
        <b>@Html.DisplayNameFor(m => m.LastName)</b>
        @Html.DisplayFor(m => m.LastName)
        <span class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</span>
    </div>
    <div class="form-group">
        <b>@Html.DisplayNameFor(m => m.EnrollmentDate)</b>
        @Html.DisplayFor(m => m.EnrollmentDate)
        <span class="text-danger">@Html.ValidationMessageFor(m => m.EnrollmentDate)</span>
    </div>

    <input type="submit" formmethod="post" value="Delete" class="btn-danger"/><span> | </span>
    <a href="/Student" class="btn-light">Cancle</a>
}