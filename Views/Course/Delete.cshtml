@model ContosoUniversity.Models.Course;

@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>
<br />

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.ID)
    <div class="form-group">
        <b>@Html.DisplayNameFor(m => m.Title): </b>
        <span>@Html.DisplayFor(m => m.Title)</span>
    </div>
    <div class="form-group">
        <b>@Html.DisplayNameFor(m => m.Credits): </b>
        <span>@Html.DisplayFor(m => m.Credits)</span>
    </div>
    <div class="form-group">
        <b>Department: </b>
        <span>
            @if (Model.Department != null)
            {
                @Html.DisplayFor(m => m.Department.Name)
            }
            else
            {
                <i>There is no department</i>
            }
        </span>
    </div>
    <div class="form-group">
        <a asp-action="Details" asp-route-id="@Model.ID">All details</a>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Delete" class="bg-danger" />
        <a asp-action="Index">Cancle</a>
    </div>
}