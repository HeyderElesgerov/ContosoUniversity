@model IEnumerable<ContosoUniversity.Models.Course>;

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<a asp-action="Create">Create New Course</a>
<br />

@if (Model.Count() != 0)
{
    <div>
        <table class="table table-light">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(p => p.First().ID)</th>
                    <th>@Html.DisplayNameFor(p => p.First().Title)</th>
                    <th>@Html.DisplayNameFor(p => p.First().Credits)</th>
                    <th>@Html.DisplayNameFor(p => p.First().Department)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var course in Model)
                {
                <tr>
                    <td>@course.ID</td>
                    <td>@course.Title</td>
                    <td>@course.Credits</td>
                    <td>
                        @if (course.Department != null)
                        {
                            @course.Department.Name
                        }
                    </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@course.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@course.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@course.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h3>There is no any Course. Try to add new one...</h3>
}
